# NetBird CoreDNS Configuration
# Copy this file to .env and fill in your values

# Required: Domains for DNS resolution (comma-separated)
# Example: mydomain.com or mydomain.com,staging.mydomain.com
NBDNS_DOMAINS=mydomain.com

# Required: NetBird setup key for peer registration
# Get this from your NetBird Management console
NBDNS_SETUP_KEY=your-netbird-setup-key-here

# Optional: NetBird Management server URL
# Default: https://api.netbird.io (official service)
# For self-hosted: https://your-management-server.com
NBDNS_MANAGEMENT_URL=

# Optional: Hostname for NetBird peer (default: nb-dns)
NBDNS_HOSTNAME=nb-dns

# Optional: DNS labels for service discovery (default: nb-dns)
# This makes the DNS service discoverable at: nb-dns.<netbird-domain>
# Example: dns,dns-server for multiple labels
NBDNS_DNS_LABELS=nb-dns

# Optional: Forward server for unresolved queries (default: 8.8.8.8)
# Examples: 1.1.1.1, 8.8.8.8, 9.9.9.9
NBDNS_FORWARD_TO=8.8.8.8

# Optional: DNS server port (default: 5053)
# Use a different port if 53 is already in use or conflicts with system DNS
NBDNS_DNS_PORT=5053

# Optional: API server port (default: 8080)
NBDNS_API_PORT=8080

# Optional: Refresh interval in seconds (default: 15)
NBDNS_REFRESH_INTERVAL=15

# Optional: Path to DNS records file (default: /etc/nb-dns/records/records.json)
NBDNS_RECORDS_FILE=/etc/nb-dns/records/records.json

# Optional: Log level for the entire service (default: info)
# Options: debug, info, warn, error
NBDNS_LOG_LEVEL=info
